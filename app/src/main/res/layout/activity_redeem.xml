<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <TextView
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:text="REEDEEM POINTS"
            android:textColor="#3F51B5"
            android:textStyle="bold"
            android:textSize="35dp" />


    <LinearLayout

        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="3dip"
            android:text="Redeem Points " />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="3dip"
            android:text="00"
            android:id="@+id/redeemPoints" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/points"
            android:id="@+id/imageView3"/>
</LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="3dip"
            android:text="Discount Amount  " />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="3dip"
            android:text="00"
            android:id="@+id/discountAmount" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"

                app:srcCompat="@drawable/rupee"
                android:id="@+id/imageView4"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="3dip"
            android:text="Bill Amount " />
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:gravity="left"
            android:padding="3dip"
            android:text="00"
            android:id="@+id/billAmount" />

        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/rupee"
            android:id="@+id/imageView5"/>
     </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">

        <Button
            android:layout_weight="1"
            android:elevation="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Cancel"
            android:textColor="#FFF"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:background="@drawable/cancelbuttonshape"
            android:id="@+id/redeemCancelButton"/>

        <Button
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Accept"
            android:textColor="#FFF"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:background="@drawable/acceptbuttonshape"
            android:id="@+id/redeemButton"/>

    </LinearLayout>

</LinearLayout>
